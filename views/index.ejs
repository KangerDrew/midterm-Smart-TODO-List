<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <!-- Local SCSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rampart+One&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <nav>
      <span>Smart TODO List</span>
    </nav>
    <div class="curve"></div>
    <header>
      <% if (!username) { %>
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" placeholder="Enter Username" style="width: 300px">
        </div>
        <button type="submit">Login</button>
      </form>
      <% } else { %>
        <div>My name Jeff *hackernoises* <%= username %></div>
        <form action="/logout" method="POST">
          <button type="submit">Logout</button>
        </form>
      </header>
      <form id="new-item" action='/reminders' method="POST">
        <input class="list-input-field" type="text" name="reminder" placeholder="To be sorted" style="width: 300px">
        <button class="new-item" type="submit">Submit</button>
      </form>
      <div class="labels">
        <h3>Movies</h3>
        <h3>Foods</h3>
        <h3>Books</h3>
        <h3>Products</h3>
      </div>
        <div>
          <ul class="movies lists"></ul>

          <ul class="foods lists"></ul>

          <ul class="books lists"></ul>

          <ul class="products lists"></ul>
        </div>
      <% } %>
    </header>

  </body>
</html>

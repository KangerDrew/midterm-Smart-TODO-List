<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <!-- Local SCSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rampart+One&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <nav>
      <span>Smart TODO List</span>
    </nav>
    <div class="curve"></div>
    <header>
      <% if (!username) { %>
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" placeholder="Enter Username" style="width: 300px">
        </div>
        <button type="submit">Login</button>
      </form>
      <% } else { %>
        <div>My name Jeff *hackernoises* <%= username %></div>
        <form action="/logout" method="POST">
          <button type="submit">Logout</button>
        </form>

      </header>
        <div>
          <ul class="movies lists">
            <li>Lord of the Rings</li>
            <li>The Hobbit</li>
          </ul>
          <ul class="foods lists">
            <li>Pasta Marinara</li>
            <li>peanut butter</li>
          </ul>
          <ul class="books lists">
            <li>Of Mice and Men</li>
            <li>Moby Dick</li>
          </ul>
          <ul class="products lists">
            <li>blender</li>
            <li>watch</li>
          </ul>
        </div>
      <% } %>
    </header>

  </body>
</html>
